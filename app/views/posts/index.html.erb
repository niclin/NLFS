<div class="container mt-4 mb-4">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-xs-6 col-md-3">
        <div class="card">

          <%= link_to post_path(post) do %>
            <% if post.post_attachments.present? %>
              <%= image_tag(post.post_attachments.first.image.thumb.url, class: "rounded card-img-top") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "rounded card-img-top") %>
            <% end %>
          <% end %>

          <div class="card-body">
            <h5>[便友帥車] <%= post.title %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>